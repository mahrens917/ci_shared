{
  "repo_context": "Shared CI tooling for Zeus, Monitor, AWS, API, common, signals, analytics, and service repositories (cfb, deribit, kalshi, pdf, tracker, weather).",
  "protected_path_prefixes": [
    "ci_tools/",
    "scripts/ci.sh",
    "ci_shared.mk",
    "shared-tool-config.toml"
  ],
  "consuming_repositories": [
    {
      "name": "api",
      "path": "~/projects/api"
    },
    {
      "name": "zeus",
      "path": "~/projects/zeus"
    },
    {
      "name": "monitor",
      "path": "~/projects/monitor"
    },
    {
      "name": "aws",
      "path": "~/projects/aws"
    },
    {
      "name": "common",
      "path": "~/projects/common"
    },
    {
      "name": "signals",
      "path": "~/projects/signals"
    },
    {
      "name": "analytics",
      "path": "~/projects/analytics"
    },
    {
      "name": "cfb",
      "path": "~/projects/cfb"
    },
    {
      "name": "deribit",
      "path": "~/projects/deribit"
    },
    {
      "name": "kalshi",
      "path": "~/projects/kalshi"
    },
    {
      "name": "pdf",
      "path": "~/projects/pdf"
    },
    {
      "name": "tracker",
      "path": "~/projects/tracker"
    },
    {
      "name": "weather",
      "path": "~/projects/weather"
    },
    {
      "name": "poly",
      "path": "~/projects/poly"
    }
  ],
  "commit_message": {
    "model": "gpt-5-codex",
    "reasoning": "medium",
    "fallback_model": "claude-sonnet-4-20250514",
    "chunk_line_limit": 6000,
    "max_chunks": 4
  }
}
