{
  "repo_context": "Shared CI tooling for Zeus, Kalshi, AWS, and API repositories.",
  "protected_path_prefixes": [
    "ci_tools/",
    "scripts/ci.sh",
    "ci_shared.mk",
    "shared-tool-config.toml"
  ],
  "consuming_repositories": [
    {"name": "api", "path": "../api"},
    {"name": "zeus", "path": "../zeus"},
    {"name": "kalshi", "path": "../kalshi"},
    {"name": "aws", "path": "../aws"}
  ],
  "commit_message": {
    "model": "claude-sonnet-4-20250514",
    "reasoning": "medium",
    "chunk_line_limit": 6000,
    "max_chunks": 4
  }
}
